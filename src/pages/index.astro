---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import Intro from "../components/Intro.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <Intro />
    <!-- <div class="text-xl py-1">Hey there ğŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Stewart Michaels</div> -->
    <div class="text-3xl py-3 font-bold">
      software engineer and entrepreneur
    </div>
    <div class="py-2">
      <text class="text-lg">
        I'm a software engineer and artist based in Assam. I have a great
        interest in full-stack development, artificial intelligence, machine
        learning, and everything in between. I completed my degree in Computer
        Science and Engineering from the <a
          class="badge badge-outline"
          href="https://www.cit.ac.in/"
          target="_blank">Central Institute of Technology, Kokrajhar</a
        >.
      </text>
    </div>
    <div class="mt-8">
      <!-- Mail Link -->
      <!-- The button to open modal -->
      <label for="my-modal-4" class="btn">ğŸ“§ Say hi!</label>

      <!-- Put this part before </body> tag -->
      <input type="checkbox" id="my-modal-4" class="modal-toggle" />
      <label for="my-modal-4" class="modal cursor-pointer">
        <label class="modal-box relative" for="">
          <h3 class="text-lg font-bold">Hey there, random Internet user!</h3>
          <p class="py-4">
            By clicking 'Yes,' you will be redirected to your email, where you
            can write an email to me.
          </p>
          <div class="modal-action">
            <a
              href="mailto:stewartmichaels@teamfinesse.in"
              target="_blank"
              class="btn">Yes!</a
            >
          </div>
        </label>
      </label>
      <!-- Twitter Link -->
      <!-- The button to open modal -->
      <label for="my-modal-5" class="btn btn-outline ml-5"
        >ğŸ¤ Let's Connect</label
      >

      <!-- Put this part before </body> tag -->
      <input type="checkbox" id="my-modal-5" class="modal-toggle" />
      <label for="my-modal-5" class="modal cursor-pointer">
        <label class="modal-box relative" for="">
          <h3 class="text-lg font-bold">Hey there, random Internet user!</h3>
          <p class="py-4">
            By clicking 'Yes', you will be redirected to Twitter, where you can
            tweet or DM me.
          </p>
          <div class="modal-action">
            <a
              href="https://twitter.com/stewiemichaels/"
              target="_blank"
              class="btn">Yes!</a
            >
          </div>
        </label>
      </label>
    </div>
  </div>

  <!-- Projects Section -->

  <div>
    <div class="text-3xl w-full font-bold mb-2 py-2">
      personal projects {"</>"}
    </div>
    <p class="py-2">
      these are some of the projects I worked on to gain more experience.
    </p>
  </div>

  <HorizontalCard
    title="GreenCity Foods Pvt. Ltd."
    img="/images/projects/gcf.webp"
    desc="I developed and managed GreenCity Foods' website and online presence, including social media campaigns and website optimization. Collaborating with the marketing team, we implemented effective strategies resulting in increased engagement and visibility."
    url="https://www.greencityfoods.in/"
    badge="CURRENT"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Team Finesse"
    img="/images/projects/fns.webp"
    desc="Team Finesse is a full-service digital agency specializing in Social Media Marketing, Web/App Development, SEO, Digital Strategy, and Graphic Design. Our tailored solutions deliver real results, taking your business to new heights."
    url="https://www.teamfinesse.in/"
    badge="CURRENT"
  />
  <div class="divider my-0"></div>

  <!-- Blog Section -->

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10 py-2">blogs {"</>"}</div>
    <p class="py-2">
      i enjoy writing about topics that interest me, such as gaming, music, and
      the latest tech stacks that i come across.
    </p>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
