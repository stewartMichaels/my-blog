---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<BaseLayout title="Contact">
  <div>
    <h1 class="text-4xl text-center font-bold py-2">Contact</h1>
    <p class="text-lg text-center font-semibold">
      Hey there, random Internet user!
    </p>
  </div>
  <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
    <div>
      <h2 class="font-medium text-2xl text-gray-800">Contact Team Finesse</h2>
      <p class="text-lg leading-relaxed text-slate-500 mt-3">
        Partner with Finesse for all your digital needs! We're here to listen,
        provide solutions, and help your business succeed. Request a free
        proposal or quote tailored to your specific needs and take the next step
        with us today!
      </p>
      <div class="mt-5">
        <div class="flex flex-row items-center mt-2 space-x-2 text-gray-600">
          <span
            ><img
              src="data:image/png;base64,"
              class="text-gray-400 w-4 h-4"
            />Guwahati, Assam, India 781006</span
          >
        </div><div
          class="flex flex-row items-center mt-2 space-x-2 text-gray-600"
        >
          <a href="mailto:hello@astroshipstarter.com"
            ><img
              src="data:image/png;base64,"
              class="text-gray-400 w-4 h-4"
            />contact@teamfinesse.in</a
          >
        </div>
      </div>
    </div>
    <div>
      <ContactForm />
    </div>
  </div>
</BaseLayout>
